                                 ScrollVerticalOffsetRatio="{Binding ContentVerticalOffsetRatio, Mode=TwoWay}"
                                 ScrollHorizentalOffsetRatio="{Binding ContentHorizentalOffsetRatio, Mode=TwoWay}"
                                 ></uc:MapEditorControl>
            
            <uc:NavigationControl Grid.Column="1"
